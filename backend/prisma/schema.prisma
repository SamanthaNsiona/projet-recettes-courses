generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model User {
  id                   Int            @id @default(autoincrement())
  name                 String
  email                String         @unique
  password             String
  role                 String         @default("USER")
  resetPasswordToken   String?
  resetPasswordExpiry  DateTime?
  recipes              Recipe[]
  lists                ShoppingList[]
  ingredients          Ingredient[]
}

model Recipe {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  isPublic    Boolean      @default(false)
  user        User         @relation(fields: [userId], references: [id])
  userId      Int
  ingredients Ingredient[]
}

model Ingredient {
  id       Int     @id @default(autoincrement())
  name     String
  unit     String?
  quantity Float?
  recipe   Recipe? @relation(fields: [recipeId], references: [id])
  recipeId Int?
  user     User?   @relation(fields: [userId], references: [id])
  userId   Int?
}

model ShoppingList {
  id     Int            @id @default(autoincrement())
  title  String
  user   User           @relation(fields: [userId], references: [id])
  userId Int
  items  ShoppingItem[]
}

model ShoppingItem {
  id       Int           @id @default(autoincrement())
  name     String
  quantity Float?
  unit     String?
  list     ShoppingList  @relation(fields: [listId], references: [id])
  listId   Int
}
